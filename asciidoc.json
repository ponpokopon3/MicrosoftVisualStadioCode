{
	"Insert chapter with counter": {
		"prefix": "==",
		"body":[
		  "== ${1:Chapter Title}",
		  ":chapter: {counter:chapter}",
		  "$0"
		  ],
		"description": "カウンタ付き章タイトル"
	  },
	"Insert section with counter": {
		"prefix": "===",
		"body":[
		  "=== ${1:Section Title}",
		  ":section: {counter:section}",
		  ":image-index: 0",
		  ":table-index: 0",
		  "$0"
		  ],
		"description": "[カウンタ付き節タイトル]"
	  },
	"Insert image with counter": {
		"prefix": "image",
		"body":[
		  ".${1:Image Title}",
		  "[caption=\"Figure {chapter}.{section}.{counter:index}\"]",
		  "image::${2:\"Link or Path\"}[$3]",
		  "$0"
		  ],
		"description": "章節番号付きカウンタ"
	  },
	"Insert table with counter": {
		"prefix": "table",
		"body":[
		  ".${1:Table Title}",
		  "[cols=\"$2\",options=\"header\"]",
		  "|===",
		  "",
		  "$3",
		  "",
		  "|===",
		  "$0"
		  ],
		"description": "章節番号付きカウンタ"
	  }
}